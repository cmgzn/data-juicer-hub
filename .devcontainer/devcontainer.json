{
  "name": "Jupyter Notebook Environment",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-toolsai.jupyter",
        "ms-python.python"
      ],
      "settings": {
        "jupyter.notebookFileRoot": "${workspaceFolder}/notebooks/"
      }
    }
  },
  "postCreateCommand": "",
  "postAttachCommand": "uv venv"
}
