{
  "name": "Jupyter Notebook Environment",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-toolsai.jupyter",
        "ms-python.python"
      ],
      "settings": {
        "jupyter.notebookFileRoot": "${workspaceFolder}/notebooks"
      }
    }
  },
  "postCreateCommand": "curl -LsSf https://astral.sh/uv/install.sh | sh",
  "postAttachCommand": "uv venv"
}
